@page
@model IndexModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
             <div class="form-group ">
                <label asp-for="Input.CityName"></label>
                <input asp-for="Input.CityName" class="form-control" />
                <span asp-validation-for="Input.CityName" class="text-danger"></span>
            </div>
             <div class="form-group " >
                <label asp-for="Input.StreetName"></label>
                <input asp-for="Input.StreetName" class="form-control" />
                <span asp-validation-for="Input.StreetName" class="text-danger"></span>
            </div>
             
             <div class="form-group  ">
                <label asp-for="Input.HouseNumber"></label>
                <input asp-for="Input.HouseNumber" class="form-control" />
                <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
            </div>
             <div class="form-group ">
                <label asp-for="Input.ZipCode"></label>
                <input asp-for="Input.ZipCode" class="form-control" />
                <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
			<label asp-for="Input.ImageUrl"></label>
			<input type="file" asp-for="file" class="form-control" />
		     </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary ">Save</button>
        </form>
    </div>
    <div class="col-6">
        <img src="@Model.Input.ImageUrl"
        width="50%" style="border-radius:5px; border:1px solid #bbb9b9"/>
    </div>
</div>

       
        <hr />
        @* <p><a  class=" mt-3  text-info" asp-area="Identity" asp-page="/Account/Manage/" title="Manage">Change Password</a> </p>*@
        
         <p><a  class=" mt-3  text-info" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage">Change Password</a> </p>
      <p><a  class="mt-2 text-danger" asp-area="Identity" asp-page="/Account/Manage/DeletePersonalData" title="Manage">Delete Profile</a></p> 
      

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}