@model HomePageViewModel



<h1>HomePage</h1>
<br />
<form asp-controller="Home" asp-action="Sort" method="post">
 <div class="form-group">
        <label asp-for="Sort"></label>                                                                                                 
        <select asp-for="Sort" class="form-control" asp-items="@Model.SortSelections">
            <option Value="">Select a SortFunction</option>
        </select>
    </div>
    <input type="Submit" />
    </form>
    <br />
<div class="row">

@foreach (var blogPost in @Model.BlogPosts)
{
        <div class="card col-3 " style=" min-width: 18rem; overflow: hidden; margin: 10px; ">
          <div class="card-body " style=" position:relative;">
            <h5 class="card-title">@blogPost.Title</h5>
            <a asp-controller="Author" asp-action="Index1" asp-route-id="@blogPost.AuthorId">@blogPost.Author.FirstName @blogPost.Author.LastName</a>
            <p class="card-text">@blogPost.Date</p>
            <p class="card-text pb-3 " style=" white-space: nowrap;
                width: 200px;
                overflow: hidden;
                text-overflow: ellipsis;">@blogPost.Content</p>
           
             <a class="btn btn-info  " style="position:absolute; top:5px ;right:5px;" asp-controller="BlogDetail" asp-action="PostDetail" asp-route-id="@blogPost.Id"> <i class="bi bi-book"></i> &nbsp;Read</a>
                   @*@if(UserManager.GetUserId(User)==@blogPost.AuthorId){
                     <p class="text-center mb-1" > <a asp-controller="BlogDetail" asp-action="CreateEditBlogpost" asp-route-id="@blogPost.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a> &nbsp;
                     <a asp-controller="BlogDetail" asp-action="DeletePost" asp-route-id="@blogPost.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i></a></p>
                     }*@
         </div>
    </div>
}
</div>
<br />
<a class="btn btn-primary" asp-controller="Home" asp-action="Next10" asp-route-id="blogPost.Id">Next 10</a>
<a class="btn btn-primary" asp-controller="Home" asp-action="Previous10" asp-route-id="blogPost.Id">Previous 10</a>
<a class="btn btn-primary" asp-controller="Home" asp-action="Last10" asp-route-id="blogPost.Id">Last 10</a>
<a class="btn btn-primary" asp-controller="Home" asp-action="First10" asp-route-id="blogPost.Id">First 10</a>



