

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogCentralApp</title>
    <link rel="stylesheet" href="~/css/BootsWatch.css" />
   <link rel="stylesheet" href="@Url.Content("../css/site2.css")"/>
     <link rel="stylesheet" href="~/css/site2.css" />
    <link rel="stylesheet" href="~/css/site.css" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link  rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar   navbar-expand-lg  navbar-light bg-white">
         <div class="container " style="justify-content: end;" >
              
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" style="justify-content: end; margin-left: 1%;" id="navbarColor02">
                  <ul class="navbar-nav  ">
                    <li class="nav-item">
           @* <div class="container nav-i" >*@
                     <a class="nav-link  " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                     </li>

                        @if (SignInManager.IsSignedIn(User))
                            {
                         <li class="nav-item">
                          
        
                            <a class=" nav-link "  asp-controller="Author" asp-action="Index1" asp-route-id="@(UserManager.GetUserId(User))">My Blog</a>
                           
                        </li>
                            }
                    
              
                <li class="nav-item">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <form id="f_search" method="get" asp-controller="Search" asp-action="Index">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input id="ipt_search" type="search" class="form-control" name="searchString" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-default ml-2 mr-2" style="color:">
                                                    Search
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </form>
                            </li>
                        </ul>
               </li>
                <partial name="_LoginPartial" />
             </ul>
            </div>
          </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
             <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

     @await Component.InvokeAsync("SideBar")


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>




</html>
